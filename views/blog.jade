extends layout

block header
            h1 Random Thoughts
block content
        #articles
            each article in articles
                - if (article) 
                  div.article
                    h1.title 
                        a(href="/blog/"+article.id+"/")!= article.title
                    div.body!= article.body
                    div.meta= getDate(article.created_at)
                - else 
                  p no value
    
